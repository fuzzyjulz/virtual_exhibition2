= simple_form_for(@event, :html => { :class => "form-horizontal" }, :wrapper => "horizontal", defaults: { :input_html => { class: "form-control"}, label_html: { class: "col-lg-4" } } ) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name
    = f.input :start, :as => :string, :input_html => { class: "datetimepicker form-control" }
    = f.input :finish, :as => :string, :input_html => { class: "datetimepicker form-control" }
    = f.input :event_url, :input_html => { class: "url form-control" }
    = f.association :landing_hall, collection: @event.halls.order(:name), include_blank: false, input_html: {class: "chosen"}
    = f.input :event_welcome_heading
    = f.input :event_welcome_text, :input_html => { class: "cleditor" }
    = f.input :main_tagline, :input_html => { class: "cleditor" }
    = f.input :additional_info, :input_html => { class: "cleditor" }
    = simple_form_image_paperclip(f, :event_logo, label: 'Logo')
    = simple_form_image_paperclip(f, :event_favicon, label: 'Favicon / Site Icon')
    = simple_form_image_paperclip(f, :main_sponsor_logo)
    = f.input :sponsor_tagline
    = simple_form_image_paperclip(f, :event_image, label: 'Sign In Image')
    = f.input :topics_title
    = f.input :keynotes_title
    = f.input :signup_panel, :input_html => { class: "cleditor" }
    = f.input :main_sponsor_url
    = f.input :privacy, collection: Privacy::LABELS
    = f.input :can_register
    = f.association :auth_models, label: "Authenitcation Model", :input_html => { class: "chosen" }
  .form-actions
    = f.button :submit, :class => "btn btn-primary"
