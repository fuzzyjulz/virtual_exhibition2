= simple_form_for(@product, :html => { :class => "form-horizontal" }, :wrapper => "horizontal", defaults: { :input_html => { class: "form-control"}, label_html: { class: "col-lg-4" } } ) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name
    = f.input :description, :input_html => { class: "cleditor" }
    = f.association :booths, collection: available_booths, input_html: {class: "chosen"}
    = f.input :product_url
    = simple_form_image_paperclip(f, :uploaded_file, label: 'Product image')

  .form-actions
    = f.button :submit, class: "btn btn-primary"
