%meta{:charset => 'utf-8'}
%meta{'http-equiv' => 'X-UA-Compatible', :content => 'IE=edge,chrome=1'}
-event = @current_event
%title= content_for?(:title) ? yield(:title) : (event.present? ? event.name : Rails.configuration.virtual_conferences.default_site_name)
-if content_for?(:description)
  %meta{name: "description", content: "#{ yield(:description) }"}
%meta{:name => 'author', :content => 'CommStrat'}
%meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0, maximum-scale=1.0"}
%link{href:'http://fonts.googleapis.com/css?family=Open+Sans', rel:'stylesheet', type:'text/css'}

-if event.present? and event.event_favicon.present?
  %link{rel:'icon', type: event.event_favicon.assets.content_type, href: event.event_favicon.assets.url}
  %link{rel:'apple-touch-icon', type: event.event_favicon.assets.content_type, href: event.event_favicon.assets.url}
